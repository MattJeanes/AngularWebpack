{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "isShellCommand": true,
            "args": ["build"],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "command": "npm",
            "isShellCommand": true,
            "args": ["run-script", "test"],
            "isBuildCommand": true,
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "restore",
            "command": "npm",
            "isShellCommand": true,
            "args": ["run-script", "restore"]
        }
    ]
}